<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="RewriteRoutes" path="*" verb="*" type="" modules="RewriteModule" scriptProcessor="" resourceType="Unspecified" requireAccess="Script" preCondition="" />
        </handlers>
        <rewrite>
            <rules>
                <rule name="Rewrite to routes.php">
                    <match url=".*" />
                    <conditions>
                        <add input="{REQUEST_URI}" pattern="(\.png|\.jpg|\.webp|\.gif|\.jpeg|\.zip|\.css|\.svg|\.js|\.pdf|\.ogg|\.mp3|\.json)$" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="routes.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
