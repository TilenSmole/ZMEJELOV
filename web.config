<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Route to routes.php" stopProcessing="true">
                    <match url="^(.*)" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_URI}" pattern="^(\.png|\.jpg|\.webp|\.gif|\.jpeg|\.zip|\.css|\.svg|\.js|\.pdf|\.ogg|\.mp3|\.json)$" ignoreCase="false" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="routes.php/{R:1}" appendQueryString="true" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
