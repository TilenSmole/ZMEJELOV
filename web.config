<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Rewrite rule for routes.php -->
                <rule name="Rewrite to routes.php" stopProcessing="true">
                    <match url="^(.*)$" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_URI}" pattern="(\.png|\.jpg|\.webp|\.gif|\.jpeg|\.zip|\.css|\.svg|\.js|\.pdf|\.ogg|\.mp3|\.json)$" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="routes.php" appendQueryString="true" />
                </rule>
                <!-- Rewrite rules for specific PHP paths -->
                <rule name="Rewrite to firstPage.php">
                    <match url="/firstPage.php" />
                    <action type="Rewrite" url="/firstPage.php" />
                </rule>
                <rule name="Rewrite to SHARED/header.php">
                    <match url="/SHARED/header.php" />
                    <action type="Rewrite" url="/SHARED/header.php" />
                </rule>
                <rule name="Rewrite to translations/load_translations.php">
                    <match url="/translations/load_translations.php" />
                    <action type="Rewrite" url="/translations/load_translations.php" />
                </rule>
                <rule name="Rewrite to translations/getLanguage.php">
                    <match url="/translations/getLanguage.php" />
                    <action type="Rewrite" url="/translations/getLanguage.php" />
                </rule>
                <rule name="Rewrite to SHARED/footer.php">
                    <match url="/SHARED/footer.php" />
                    <action type="Rewrite" url="/SHARED/footer.php" />
                </rule>
                <rule name="Rewrite to zmentures/introduction">
                    <match url="/zmentures/introduction" />
                    <action type="Rewrite" url="/zmentures#introduction_OG" />
                </rule>
                <rule name="Rewrite to SERVER/getSessionData.php">
                    <match url="/SERVER/getSessionData.php" />
                    <action type="Rewrite" url="/SERVER/getSessionData.php" />
                </rule>
                <rule name="Rewrite to login">
                    <match url="/login" />
                    <action type="Rewrite" url="/SERVER/login.php" />
                </rule>
                <rule name="Rewrite to register">
                    <match url="/register" />
                    <action type="Rewrite" url="/SERVER/register.php" />
                </rule>
                <rule name="Rewrite to user">
                    <match url="/user" />
                    <action type="Rewrite" url="/user.php" />
                </rule>
                <rule name="Rewrite to contact">
                    <match url="/contact" />
                    <action type="Rewrite" url="/SHARED/contact.php" />
                </rule>
                <rule name="Rewrite to zmentures">
                    <match url="/zmentures" />
                    <action type="Rewrite" url="/zmejelov_basic.php" />
                </rule>
                <rule name="Rewrite to Zmejelov1869">
                    <match url="/Zmejelov1869" />
                    <action type="Rewrite" url="/zmejelov_og.php" />
                </rule>
                <rule name="Rewrite to Crackelov">
                    <match url="/Crackelov" />
                    <action type="Rewrite" url="/zmejelov_speed_run.php" />
                </rule>
                <rule name="Rewrite to TheFinalRage">
                    <match url="/TheFinalRage" />
                    <action type="Rewrite" url="/zmejelov_mcqueen.php" />
                </rule>
                <rule name="Rewrite to CityZmentures">
                    <match url="/CityZmentures" />
                    <action type="Rewrite" url="/ZMEJELOV_njam_njam.php" />
                </rule>
                <rule name="Rewrite to intro">
                    <match url="/intro" />
                    <action type="Rewrite" url="/index.php" />
                </rule>
                <rule name="Rewrite to any 404">
                    <match url="/404" />
                    <action type="Rewrite" url="/errors/404.php" />
                </rule>
                <rule name="Rewrite to translations/language">
                    <match url="/translations/language.php" />
                    <action type="Rewrite" url="/translations/language.php" />
                </rule>
                <!-- Add more rewrite rules for other specific paths if needed -->
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
