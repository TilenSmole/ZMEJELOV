<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- Rewrite rule for routes.php -->
                <rule name="Rewrite Rule">
                    <match url=".*" />
                    <conditions>
                        <add input="{StaticRewrites:{REQUEST_URI}}" pattern="(.+)" />
                    </conditions>
                    <action type="Rewrite" url="{C:1}" />
                </rule>
                <!-- Rewrite rule for removing html extension -->
                <rule name="Remove html Extension" stopProcessing="true">
                    <match url="^(.+)\.html$" />
                    <action type="Redirect" url="{R:1}" redirectType="Permanent" />
                </rule>
                <!-- Add more rewrite rules for specific paths -->
                <rule name="Rewrite to firstPage.php">
                    <match url="/firstPage.php" />
                    <action type="Rewrite" url="/firstPage.php" />
                </rule>
                <rule name="Rewrite to SHARED/header.php">
                    <match url="/SHARED/header.php" />
                    <action type="Rewrite" url="/SHARED/header.php" />
                </rule>
                <rule name="Rewrite to translations/load_translations.php">
                    <match url="/translations/load_translations.php" />
                    <action type="Rewrite" url="/translations/load_translations.php" />
                </rule>
                <rule name="Rewrite to translations/getLanguage.php">
                    <match url="/translations/getLanguage.php" />
                    <action type="Rewrite" url="/translations/getLanguage.php" />
                </rule>
                <rule name="Rewrite to SHARED/footer.php">
                    <match url="/SHARED/footer.php" />
                    <action type="Rewrite" url="/SHARED/footer.php" />
                </rule>
                <!-- Add more rules for other specific paths -->
            </rules>
        </rewrite>
        <rewriteMaps>
            <rewriteMap name="StaticRewrites" defaultValue="">
                <!-- Define rewrite mappings for your routes -->
                <add key="/" value="/firstPage.php" />
                <add key="/SHARED/header.php" value="/SHARED/header.php" />
                <add key="/translations/load_translations.php" value="/translations/load_translations.php" />
                <add key="/translations/getLanguage.php" value="/translations/getLanguage.php" />
                <add key="/SHARED/footer.php" value="/SHARED/footer.php" />
                <!-- Add more rewrite mappings for other routes -->
            </rewriteMap>
        </rewriteMaps>
    </system.webServer>
</configuration>
